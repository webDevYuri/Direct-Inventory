@model network_inventory_system.Models.Item

@{
    ViewData["Title"] = "Delete Item";
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 100vh; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%); font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <div class="card border-0 mx-auto" style="border-radius: 16px; max-width: 1100px; width: 100%; overflow: hidden; box-shadow: 0 15px 35px rgba(0,0,0,0.08); transition: all 0.3s ease;">
        <div class="card-header border-0 p-0">
            <div style="background: linear-gradient(120deg, #e74c3c, #c0392b); height: 8px;"></div>
            <div class="d-flex justify-content-between align-items-center px-4 py-3">
                <h5 class="mb-0" style="font-weight: 700; letter-spacing: 0.5px; color: #2c3e50; font-size: 1.25rem;">
                    Delete this item?
                </h5>
                <div>
                    <a asp-action="Index" class="btn btn-sm me-2" style="background-color: #f1f1f1; color: #333; border-radius: 6px; padding: 0.5rem 1rem; font-weight: 500; transition: all 0.2s ease; font-size: 0.9rem;">
                        Back to List
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger" style="background: linear-gradient(135deg, #e74c3c, #c0392b); border: none; border-radius: 8px; padding: 10px 24px; font-weight: 600; letter-spacing: 0.5px; transition: all 0.3s ease; box-shadow: 0 4px 10px rgba(231, 76, 60, 0.3); font-size: 0.9rem;" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 15px rgba(231, 76, 60, 0.4)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 10px rgba(231, 76, 60, 0.3)';">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body p-4" style="overflow-y: auto; max-height: calc(100vh - 100px);">
            <div class="row">
                <div class="col-md-4 mb-3">
                    @if (!string.IsNullOrEmpty(Model.Photo))
                    {
                        <img src="@Model.Photo" alt="@Model.Name" class="img-fluid img-thumbnail" style="border-radius: 8px; box-shadow: 0 4px 10px rgba(231, 76, 60, 0.3);" />
                    }
                    else
                    {
                        <div class="alert alert-info" style="font-size: 0.95rem;">No image available</div>
                    }
                </div>
                <div class="col-md-8">
                    <div style="font-size: 1rem; line-height: 1.6;">
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Name</div>
                            <div style="width: 65%;">@Model.Name</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Description</div>
                            <div style="width: 65%;">@Model.Description</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Serial No</div>
                            <div style="width: 65%;">@Model.SerialNo</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Property No</div>
                            <div style="width: 65%;">@Model.PropertyNo</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Control No</div>
                            <div style="width: 65%;">@Model.ControlNo</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Model</div>
                            <div style="width: 65%;">@Model.Model</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Price</div>
                            <div style="width: 65%;">
                                @(Model.Price.HasValue ? Model.Price.Value.ToString("C") : "")
                            </div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Date of Purchase</div>
                            <div style="width: 65%;">@(Model.DateOfPurchase.HasValue ? Model.DateOfPurchase.Value.ToString("yyyy-MM-dd") : "")</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Condition</div>
                            <div style="width: 65%;">@Model.Condition</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Status</div>
                            <div style="width: 65%;">@Model.Status</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Accountable Officer</div>
                            <div style="width: 65%;">@Model.AccountableOfficer</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Category</div>
                            <div style="width: 65%;">@Model.Category</div>
                        </div>
                        <div style="display: flex; justify-content: space-between; padding: 0.5rem 0;">
                            <div style="font-weight: 600; color: #495057; width: 30%;">Division</div>
                            <div style="width: 65%;">@Model.Division</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
