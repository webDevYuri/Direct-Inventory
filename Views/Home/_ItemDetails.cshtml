@model network_inventory_system.Models.Item

<div class="row">
    <div class="col-md-4 text-center mb-3">
        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <img src="@Model.Photo" alt="@Model.Name" class="img-fluid img-thumbnail" style="border-radius: 8px; box-shadow: 0 4px 10px rgba(0,0,0,0.1);" />
        }
        else
        {
            <div class="alert alert-info">No image available</div>
        }
    </div>
    <div class="col-md-8">
        <h4 class="mb-3" style="font-weight: 700; color: #2c3e50;">@Model.Name</h4>
        <div style="font-size: 1rem; line-height: 1.6;">
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Description</div>
                <div style="width: 60%;">@Model.Description</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Serial No</div>
                <div style="width: 60%;">@Model.SerialNo</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Property No</div>
                <div style="width: 60%;">@Model.PropertyNo</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Control No</div>
                <div style="width: 60%;">@Model.ControlNo</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Model</div>
                <div style="width: 60%;">@Model.Model</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Price</div>
                <div style="width: 60%;">@Model.Price.ToString("C")</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Date of Purchase</div>
                <div style="width: 60%;">@Model.DateOfPurchase.ToString("yyyy-MM-dd")</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Condition</div>
                <div style="width: 60%;">@Model.Condition</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Status</div>
                <div style="width: 60%;">@Model.Status</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Accountable Officer</div>
                <div style="width: 60%;">@Model.AccountableOfficer</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0; border-bottom: 1px solid #dee2e6;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Category</div>
                <div style="width: 60%;">@Model.Category</div>
            </div>
            <div style="display: flex; justify-content: space-between; padding: 0.5rem 0;">
                <div style="font-weight: 600; color: #495057; width: 35%;">Division</div>
                <div style="width: 60%;">@Model.Division</div>
            </div>
        </div>
    </div>
</div>