@model network_inventory_system.Models.Item

@{
    ViewData["Title"] = "Edit Item";
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 100vh; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="card border-0 mx-auto" style="border-radius: 16px; max-width: 1100px; width: 100%; overflow: hidden; box-shadow: 0 15px 35px rgba(0,0,0,0.08); transition: all 0.3s ease;">
        <div class="card-header border-0 p-0">
            <div style="background: linear-gradient(120deg, #2ecc71, #27ae60); height: 8px;"></div>
            <div class="d-flex justify-content-between align-items-center px-4 py-3">
                <h5 class="mb-0" style="font-weight: 700; letter-spacing: 0.5px; color: #2c3e50;">
                    Edit Item
                </h5>
                <div>
                    <a asp-action="Index" class="btn btn-sm me-2" style="background-color: #f1f1f1; color: #333; border-radius: 6px; padding: 0.4rem 1rem; font-weight: 500; transition: all 0.2s ease;">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-4" style="overflow-y: auto; max-height: calc(100vh - 100px);">
            <form asp-action="Edit" enctype="multipart/form-data" id="editForm">
                <div asp-validation-summary="ModelOnly" class="alert py-2 small" style="background-color: rgba(220, 53, 69, 0.1); color: #dc3545; border: none; border-radius: 8px; border-left: 4px solid #dc3545;"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Photo" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="SerialNo" class="form-label"></label>
                        <input asp-for="SerialNo" class="form-control" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';" />
                        <span asp-validation-for="SerialNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PropertyNo" class="form-label"></label>
                        <input asp-for="PropertyNo" class="form-control" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';" />
                        <span asp-validation-for="PropertyNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ControlNo" class="form-label"></label>
                        <input asp-for="ControlNo" class="form-control" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';" />
                        <span asp-validation-for="ControlNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Model" class="form-label"></label>
                        <input asp-for="Model" class="form-control" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Condition" class="form-label"></label>
                        <select asp-for="Condition" class="form-select" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';">
                            <option value="">Select Condition</option>
                            <option value="New">New</option>
                            <option value="Good">Good</option>
                            <option value="Fair">Fair</option>
                            <option value="Poor">Poor</option>
                            <option value="Damaged">Damaged</option>
                        </select>
                        <span asp-validation-for="Condition" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';">
                            <option value="">Select Status</option>
                            <option value="In Use">In Use</option>
                            <option value="In Stock">In Stock</option>
                            <option value="Under Repair">Under Repair</option>
                            <option value="Disposed">Disposed</option>
                            <option value="Lost">Lost</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="AccountableOfficer" class="form-label"></label>
                        <input asp-for="AccountableOfficer" class="form-control" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';" />
                        <span asp-validation-for="AccountableOfficer" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';">
                            <option value="">Select Category</option>
                            <option value="Computer">Computer</option>
                            <option value="Networking">Networking</option>
                            <option value="Furniture">Furniture</option>
                            <option value="Office Equipment">Office Equipment</option>
                            <option value="Electronics">Electronics</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Division" class="form-label"></label>
                        <select asp-for="Division" class="form-select" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';">
                            <option value="">Select Division</option>
                            <option value="PMITD">PMITD</option>
                            <option value="ACD">ACD</option>
                            <option value="FD">FD</option>
                            <option value="AD">AD</option>
                            <option value="AMD">AMD</option>
                            <option value="BPED">BPED</option>
                            <option value="FDP">FDP</option>
                            <option value="LSD">LSD</option>
                            <option value="SEPRD">SEPRD</option>
                            <option value="TMTD">TMTD</option>
                            <option value="EDD">EDD</option>
                            <option value="OD">OD</option>
                            <option value="FMFOD">FMFOD</option>
                            <option value="CTF-FMOD">CTF-FMOD</option>
                            <option value="IARCD">IARCD</option>
                        </select>
                        <span asp-validation-for="Division" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="photoFile" class="form-label">Photo</label>
                        <input type="file" name="photoFile" id="photoFile" class="form-control" accept="image/*" style="height: 55px; border: 1px dashed #27ae60; border-radius: 8px; padding: 8px;" />
                        @if (!string.IsNullOrEmpty(Model.Photo))
                        {
                            <div class="mt-2">
                                <img src="@Model.Photo" alt="@Model.Name" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                <span class="ms-2">Current Photo</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" style="border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease;" onFocus="this.style.borderColor='#2ecc71';" onBlur="this.style.borderColor='#e0e0e0';"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" form="editForm" class="btn" style="background: linear-gradient(135deg, #2ecc71, #27ae60); color: white; border: none; border-radius: 8px; padding: 10px 24px; font-weight: 600; letter-spacing: 0.5px; transition: all 0.3s ease; box-shadow: 0 4px 10px rgba(46, 204, 113, 0.3);" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 15px rgba(46, 204, 113, 0.4)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 10px rgba(46, 204, 113, 0.3)';">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
