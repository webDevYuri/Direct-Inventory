@model network_inventory_system.Models.Item

@{
    ViewData["Title"] = "Add Item";
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 100vh; background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
    <div class="card border-0 mx-auto" style="border-radius: 16px; max-width: 1100px; width: 100%; overflow: hidden; box-shadow: 0 15px 35px rgba(0,0,0,0.08); transition: all 0.3s ease;">
        <div class="card-header border-0 p-0">
            <div style="background: linear-gradient(120deg, #2ecc71, #27ae60); height: 8px;"></div>
            <div class="d-flex justify-content-between align-items-center px-4 py-3">
                <h5 class="mb-0" style="font-weight: 700; letter-spacing: 0.5px; color: #2c3e50;">
                    Add Item
                </h5>
                <div>
                    <a asp-action="Index" class="btn btn-sm me-2" style="background-color: #f1f1f1; color: #333; border-radius: 6px; padding: 0.4rem 1rem; font-weight: 500; transition: all 0.2s ease;">
                        Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body p-4" style="overflow-y: auto; max-height: calc(100vh - 100px);">
            <div asp-validation-summary="ModelOnly" class="alert py-2 small" style="background-color: rgba(220, 53, 69, 0.1); color: #dc3545; border: none; border-radius: 8px; border-left: 4px solid #dc3545;"></div>

            <form action="/Home/Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Photo" value="/images/items/placeholder.png" />
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div style="width: 32px; height: 32px; background: linear-gradient(135deg, #2ecc71, #27ae60); border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 12px; box-shadow: 0 3px 6px rgba(46, 204, 113, 0.2);">1</div>
                        <h6 class="mb-0" style="font-weight: 700; letter-spacing: 0.7px; text-transform: uppercase; color: #2c3e50;">Basic Information</h6>
                    </div>

                    <div style="background-color: white; border-radius: 12px; padding: 20px; box-shadow: 0 3px 15px rgba(0,0,0,0.03); position: relative; overflow: hidden;">
                        <div style="position: absolute; top: 0; left: 0; width: 4px; height: 100%; background: linear-gradient(to bottom, #2ecc71, rgba(46, 204, 113, 0.5));"></div>

                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating mb-1">
                                    <input asp-for="Name" class="form-control" autocomplete="off" id="Name" placeholder="Name" required style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';" />
                                    <label asp-for="Name" style="padding-left: 15px; color: #6c757d;">Name *</label>
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Serial No</label>
                                <input asp-for="SerialNo" class="form-control" autocomplete="off" style="height: 42px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';" />
                                <span asp-validation-for="SerialNo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Property No</label>
                                <input asp-for="PropertyNo" class="form-control" autocomplete="off" style="height: 42px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';" />
                                <span asp-validation-for="PropertyNo" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Control No</label>
                                <input asp-for="ControlNo" class="form-control" autocomplete="off" style="height: 42px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';" />
                                <span asp-validation-for="ControlNo" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div style="width: 32px; height: 32px; background: linear-gradient(135deg, #2ecc71, #27ae60); border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 12px; box-shadow: 0 3px 6px rgba(46, 204, 113, 0.2);">2</div>
                        <h6 class="mb-0" style="font-weight: 700; letter-spacing: 0.7px; text-transform: uppercase; color: #2c3e50;">Item Details</h6>
                    </div>

                    <div style="background-color: white; border-radius: 12px; padding: 20px; box-shadow: 0 3px 15px rgba(0,0,0,0.03); position: relative; overflow: hidden;">
                        <div style="position: absolute; top: 0; left: 0; width: 4px; height: 100%; background: linear-gradient(to bottom, #2ecc71, rgba(46, 204, 113, 0.5));"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-1">
                                    <input asp-for="Model" class="form-control" autocomplete="off" id="Model" placeholder="Model" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';" />
                                    <label asp-for="Model" style="padding-left: 15px; color: #6c757d;">Model</label>
                                    <span asp-validation-for="Model" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-1">
                                    <input asp-for="Price" class="form-control" autocomplete="off" id="Price" placeholder="Price" type="number" step="0.01" value="0" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';" />
                                    <label asp-for="Price" style="padding-left: 15px; color: #6c757d;">Price</label>
                                    <span asp-validation-for="Price" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Condition</label>
                                <select asp-for="Condition" class="form-select" style="height: 42px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';">
                                    <option value="">Select Condition</option>
                                    <option value="New">New</option>
                                    <option value="Good">Good</option>
                                    <option value="Fair">Fair</option>
                                    <option value="Poor">Poor</option>
                                    <option value="Damaged">Damaged</option>
                                </select>
                                <span asp-validation-for="Condition" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Status</label>
                                <select asp-for="Status" class="form-select" style="height: 42px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';">
                                    <option value="">Select Status</option>
                                    <option value="In Use">In Use</option>
                                    <option value="In Stock">In Stock</option>
                                    <option value="Under Repair">Under Repair</option>
                                    <option value="Disposed">Disposed</option>
                                    <option value="Lost">Lost</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Category</label>
                                <select asp-for="Category" class="form-select" style="height: 42px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';">
                                    <option value="">Select Category</option>
                                    <option value="Computer">Computer</option>
                                    <option value="Networking">Networking</option>
                                    <option value="Furniture">Furniture</option>
                                    <option value="Office Equipment">Office Equipment</option>
                                    <option value="Electronics">Electronics</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Photo</label>
                                <div class="input-group" style="border: 1px dashed #27ae60; border-radius: 8px; padding: 8px; background-color: rgba(46, 204, 113, 0.03);">
                                    <input type="file" name="photoFile" id="photoFile" class="form-control border-0 bg-transparent" accept="image/*" style="height: 42px;" />
                                </div>
                                <small class="form-text" style="color: #6c757d; font-size: 0.75rem;">Optional: Upload an image of the item</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div style="width: 32px; height: 32px; background: linear-gradient(135deg, #2ecc71, #27ae60); border-radius: 8px; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; margin-right: 12px; box-shadow: 0 3px 6px rgba(46, 204, 113, 0.2);">3</div>
                        <h6 class="mb-0" style="font-weight: 700; letter-spacing: 0.7px; text-transform: uppercase; color: #2c3e50;">Assignment Details</h6>
                    </div>

                    <div style="background-color: white; border-radius: 12px; padding: 20px; box-shadow: 0 3px 15px rgba(0,0,0,0.03); position: relative; overflow: hidden;">
                        <div style="position: absolute; top: 0; left: 0; width: 4px; height: 100%; background: linear-gradient(to bottom, #2ecc71, rgba(46, 204, 113, 0.5));"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-1">
                                    <input asp-for="AccountableOfficer" autocomplete="off" class="form-control" id="AccountableOfficer" placeholder="Accountable Officer" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; padding-left: 15px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';" />
                                    <label asp-for="AccountableOfficer" style="padding-left: 15px; color: #6c757d;">Accountable Officer</label>
                                    <span asp-validation-for="AccountableOfficer" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <select asp-for="Division" class="form-select" style="height: 55px; border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';">
                                    <option value="">Select Division</option>
                                    <option value="PMITD">PMITD</option>
                                    <option value="ACD">ACD</option>
                                    <option value="FD">FD</option>
                                    <option value="AD">AD</option>
                                    <option value="AMD">AMD</option>
                                    <option value="BPED">BPED</option>
                                    <option value="FDP">FDP</option>
                                    <option value="LSD">LSD</option>
                                    <option value="SEPRD">SEPRD</option>
                                    <option value="TMTD">TMTD</option>
                                    <option value="EDD">EDD</option>
                                    <option value="OD">OD</option>
                                    <option value="FMFOD">FMFOD</option>
                                    <option value="CTF-FMOD">CTF-FMOD</option>
                                    <option value="IARCD">IARCD</option>
                                </select>
                                <span asp-validation-for="Division" class="text-danger small"></span>
                            </div>
                            <div class="col-12">
                                <label class="form-label mb-1" style="font-size: 0.85rem; font-weight: 600; color: #495057;">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" style="border: 1px solid #e0e0e0; border-radius: 8px; transition: all 0.2s ease; box-shadow: none;" onFocus="this.style.borderColor='#2ecc71'; this.style.boxShadow='0 0 0 3px rgba(46, 204, 113, 0.1)';" onBlur="this.style.borderColor='#e0e0e0'; this.style.boxShadow='none';"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn" style="background: linear-gradient(135deg, #2ecc71, #27ae60); color: white; border: none; border-radius: 8px; padding: 10px 24px; font-weight: 600; letter-spacing: 0.5px; transition: all 0.3s ease; box-shadow: 0 4px 10px rgba(46, 204, 113, 0.3);" onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 6px 15px rgba(46, 204, 113, 0.4)';" onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 10px rgba(46, 204, 113, 0.3)';">
                        Create Item
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}
